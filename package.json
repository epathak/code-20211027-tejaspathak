    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.3.3",
    "jest": "^27.3.1",
    "rimraf": "^3.0.2",
    "sonar-scanner": "^3.1.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
